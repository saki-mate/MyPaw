<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDE5E8"
    tools:context=".VremeActivity">

    <TextView
        android:id="@+id/tvGrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/novi_sad"
        android:textColor="#000000"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.779"
        app:layout_constraintStart_toEndOf="@+id/vremeSlika"
        app:layout_constraintTop_toTopOf="@+id/vremeSlika" />

    <TextView
        android:id="@+id/tvDatumVreme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="dd-mm-yyyy"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/tvGrad"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/tvGrad"
        app:layout_constraintTop_toBottomOf="@+id/tvGrad" />

    <ImageView
        android:id="@+id/vremeSlika"
        android:layout_width="296dp"
        android:layout_height="306dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oblakrug" />

    <TextView
        android:id="@+id/tvTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/unica_one"
        android:text="0째 "
        android:textColor="#000000"
        android:textSize="300sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vremeSlika" />

    <TextView
        android:id="@+id/tvRealFeel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/subjektivni_osecaj"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/tvNajNaj"
        app:layout_constraintStart_toStartOf="@+id/tvNajNaj"
        app:layout_constraintTop_toBottomOf="@+id/tvNajNaj" />

    <TextView
        android:id="@+id/tvRFdeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="8dp"
        android:text="0째"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRealFeel"
        app:layout_constraintStart_toEndOf="@+id/tvRealFeel" />

    <TextView
        android:id="@+id/tvNajNaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="0째 / 0째 "
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTemperatura"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvTemperatura"
        app:layout_constraintTop_toBottomOf="@+id/tvTemperatura" />

</androidx.constraintlayout.widget.ConstraintLayout>