<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDE5E8"

    tools:context=".activity_home">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/addImage"
            android:layout_width="545dp"
            android:layout_height="275dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/avatar"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/btTvojiLjubimci"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:text="@string/dodaj_ljubimca"
            android:textColor="#000000"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btVreme"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:text="@string/vreme"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btPark"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:text="@string/setnja"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btVeterinar"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:text="@string/btJezik"
            android:textColor="#000000"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btPomoc"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="50dp"
            android:text="@string/pomoc"
            android:textColor="#000000"
            android:textSize="34sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>